<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobideck.appdeck">

    <!--  permission for appdeck -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" /><!-- Internet Access -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /><!-- Check Internet Access -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/><!-- Read cached files -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /><!-- Write cached files -->

    <!--  permission for better advertisement -->
    <!--<uses-permission android:name="android.permission.READ_PHONE_STATE"/>--><!-- Get user ID -->

    <!--  permission for push -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" /><!-- Receive Push message -->
    <permission android:name="com.mobideck.appdeck.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.mobideck.appdeck.permission.C2D_MESSAGE" />

    <!--  permission for crosswalk -->
    <!--<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--<uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />-->

    <!-- WideSapce minSdk 17 override -->
    <uses-sdk android:minSdkVersion="16" tools:overrideLibrary="com.gc.materialdesign" />


    <!-- vibrate -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

   <!-- phone -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        tools:replace="android:icon,android:theme"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:hardwareAccelerated="true"
        android:name="com.mobideck.appdeck.AppDeckApplication"
        android:theme="@style/Theme.MyAppDeckTheme"
        android:allowBackup="true">

        <!-- AppDeck Test App -->
        <meta-data
            android:name="AppDeckJSONURL"
            android:value="http://config.appdeck.mobi/json/218hf32d1901627d35131fa83b63f56ae906" />

        <meta-data android:name="noCache" android:value="false" />

        <!-- BarCode API -->
        <meta-data android:name="com.google.android.gms.vision.DEPENDENCIES" android:value="barcode"/>


        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.mobideck.appdeck" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->

        <!-- [START gcm_listener] -->
        <service
            android:name="com.mobideck.appdeck.GCMGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->
        <!-- [START instanceId_listener] -->
        <service
            android:name="com.mobideck.appdeck.GCMInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name="com.mobideck.appdeck.GCMRegistrationIntentService"
            android:exported="false">
        </service>

        <activity
            android:name=".Loader"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!--
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="http" android:host="testappv2.appdeck.mobi" />
                <data android:scheme="https" android:host="testappv2.appdeck.mobi" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />-->
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="http" android:host="testappv2.appdeck.mobi" android:pathPrefix="/" />
                <data android:scheme="https" android:host="testappv2.appdeck.mobi" android:pathPrefix="/" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!--<category android:name="android.intent.category.LEANBACK_LAUNCHER" />-->
            </intent-filter>

            <!-- Branch.io intent filter -->
            <!--
            <intent-filter>
                <data android:scheme="branchio" android:host="open" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>-->

        </activity>

        <!-- AdMob Activity -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <!-- Facebook -->
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <provider android:authorities="com.facebook.app.FacebookContentProvider1635878233340418"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>


        <meta-data android:name="com.crashlytics.ApiKey" android:value="e62d5eb16cef87dc2d56665e3205360edcbd44bb"/>
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

    </application>

</manifest>
